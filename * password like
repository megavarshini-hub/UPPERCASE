#include <stdio.h>
#include <string.h>

int main() {
    char ch[100];
    int i, len;

    printf("Enter your password: ");
    scanf("%s", ch);  // Read the string

    len = strlen(ch);  // Count number of characters

    printf("Password format: ");
    for(i = 0; i < len; i++) {
        printf("*");  // Mask each character
    }

    printf("\n");
    return 0;
}
