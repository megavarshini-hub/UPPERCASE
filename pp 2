#include <stdio.h>

int main()
{
    char ch[100];
    int i, count = 0;

    printf("Enter the word: ");
    scanf("%s", ch);  // Reads a word (string)

    for (i = 0; ch[i] != '\0'; i++)
    {
        if (ch[i] >= 'A' && ch[i] <= 'Z')
        {
            count++;  // Correct: increment for each uppercase
        }
    }

    printf("Number of uppercase letters: %d\n", count);
    return 0;
}
//Enter the word: APPle
//3
